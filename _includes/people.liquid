<!-- _includes/persons.html -->
<div class="grid-item">
  {% if person.redirect -%}
    <a href="{{ person.redirect }}">
  {%- else -%}
    <a href="{{ person.url | relative_url }}">
  {%- endif %}
    <div class="card hoverable">
      {%- if person.img %}
        {%- include figure.liquid
          path=person.img
          alt="Portrait"
          class="img-fluid rounded-circle z-depth-0"
        -%}
      {%- endif %}
      <h2 class="card-title text-capitalize">
        {{ person.firstname }} {{ person.lastname }}
      </h2>
      {%- if person.pronouns -%}
        <h3 class="card-title card-pronouns mb-2">
          {{ person.pronouns }}
        </h3>
      {%- endif -%}
      <div class="card-icons">
        {%- if person.email -%}
          <a href="mailto:{{ person.email | encode_email }}" title="e-mail">
            <i class="icon mr-1 p-0 fas fa-envelope"></i>
          </a>
        {% endif %}
        {%- if person.orcid_id -%}
          <a href="https://orcid.org/{{ person.orcid_id }}" title="ORCID">
            <i class="icon mr-1 p-0 ai ai-orcid"></i>
          </a>
        {% endif %}
        {%- if person.scholar_userid -%}
          <a href="https://scholar.google.com/citations?user={{ person.scholar_userid }}" title="Google Scholar">
            <i class="icon mr-1 p-0 ai ai-google-scholar"></i>
          </a>
        {% endif %}
        {%- if person.publons_id -%}
          <a href="https://publons.com/a/{{ person.publons_id }}/" title="Publons">
            <i class="ai ai-publons"></i>
          </a>
        {% endif %}
        {%- if person.research_gate_profile -%}
          <a href="https://www.researchgate.net/profile/{{person.research_gate_profile}}/" title="ResearchGate">
            <i class="icon mr-1 p-0 ai ai-researchgate"></i>
          </a>
        {% endif %}
        {%- if person.github_username -%}
          <a href="https://github.com/{{ person.github_username }}" title="GitHub">
            <i class="icon mr-1 p-0 fab fa-github"></i>
          </a>
        {% endif %}
        {%- if person.linkedin_username -%}
          <a href="https://www.linkedin.com/in/{{ person.linkedin_username }}" title="LinkedIn">
            <i class="icon mr-1 p-0 fab fa-linkedin"></i>
          </a>
        {% endif %}
        {%- if person.twitter_username -%}
          <a href="https://twitter.com/{{ person.twitter_username }}" title="Twitter">
            <i class="icon mr-1 p-0 fab fa-twitter"></i>
          </a>
        {% endif %}
        {%- if person.medium_username -%}
          <a href="https://medium.com/@{{ person.medium_username }}" title="Medium">
            <i class="icon mr-1 p-0 fab fa-medium"></i>
          </a>
        {% endif %}
        {%- if person.quora_username -%}
          <a href="https://www.quora.com/profile/{{ person.quora_username }}" title="Quora">
            <i class="icon mr-1 p-0 fab fa-quora"></i>
          </a>
        {% endif %}
        {%- if person.blogger_url -%}
          <a href="{{ person.blogger_url }}" title="Blogger">
            <i class="icon mr-1 p-0 fab fa-blogger-b"></i>
          </a>
        {% endif %}
        {%- if person.work_url -%}
          <a href="{{ person.work_url }}" title="Work">
            <i class="icon mr-1 p-0 fas fa-briefcase"></i>
          </a>
        {% endif %}
        {%- if person.wikidata_id -%}
          <a href="https://www.wikidata.org/wiki/{{ person.wikidata_id }}" title="Wikidata">
            <i class="icon mr-1 p-0 fas fa-barcode"></i>
          </a>
        {% endif %}
        {%- if person.strava_userid -%}
          <a href="https://www.strava.com/athletes/{{ person.strava_userid }}" title="Strava">
            <i class="icon mr-1 p-0 fab fa-strava"></i>
          </a>
        {% endif %}
        {%- if person.keybase_username -%}
          <a href="https://keybase.io/{{ person.keybase_username }}" title="Keybase">
            <i class="icon mr-1 p-0 fab fa-keybase"></i>
          </a>
        {% endif %}
        {%- if person.gitlab_username -%}
          <a href="https://gitlab.com/{{ person.gitlab_username }}" title="GitLab">
            <i class="icon mr-1 p-0 fab fa-gitlab"></i>
          </a>
        {% endif %}
        {%- if person.dblp_url -%}
          <a href="{{ person.dblp_url }}" title="DBLP">
            <i class="icon mr-1 p-0 ai ai-dblp"></i>
          </a>
        {% endif %}
        {%- if person.stackoverflow_id -%}
          <a href="https://stackoverflow.com/users/{{ person.stackoverflow_id }}" title="Stackoverflow">
            <i class="icon mr-1 p-0 fab fa-stack-overflow"></i>
          </a>
        {% endif %}
        {%- if person.rss_icon -%}
          <a href="{{ person.baseurl | prepend: person.url }}/feed.xml" title="RSS Feed">
            <i class="icon mr-1 p-0 fas fa-rss-square"></i>
          </a>
        {% endif %}
      </div>
      <div class="card-body">
        <h3 class="card-text mt-1">{{ person.description }}</h3>
      </div>
    </div>
  </a>
</div>